<h1>The admin side is here to serve you</h1>
<p>Behold of amazing download options:</p>

<h2>Community layer files</h2>
<table>
  <thead>
    <tr><th>File</th><th>Generated at</th><th>Actions</th></tr>
  </thead>
  <tbody>
  <% @community_layer_files.each do |clf| %>
    <tr>
      <td><%= clf.title %> </td>
      <td>
        <% if clf.job_id %>
          <span id="<%= clf.job_id %>" class="job_in_progress">in progress</span>
        <% else %>
          <%= clf.zip_ctime %>
        <% end %>
      </td>
      <td><%= layer_download_link(clf) %> | <%= layer_generate_link(clf) %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<h2>Individual user layers</h2>
<p>There were <strong><%= pluralize(Layer.count, 'user edit') %></strong> by <strong><%= pluralize(@user_layers.length, 'diferent user') %></strong>.</p>
<table>
  <thead>
    <tr><th>User</th><th></th><th>Mangrove</th><th>Coral</th></tr>
  </thead>
  <tbody>
  <%
    @user_layers.each do |layer|
      email = layer.user.try(:email)
  %>
    <tr>
      <td><strong><%= email.presence||"Anonymous" %></strong></td>
      <td><%= pluralize(Layer.where(:user_id => layer.user.try(:id)).count, 'edit') %></td>
      <td><%= link_to "Generate Mangroves edits (.shp)", admin_generate_from_cartodb_path(:email => email, :status => Status::VALIDATED, :name => Names::MANGROVE)%></td>
      <td><%= link_to "Generate Corals edits (.shp)", admin_generate_from_cartodb_path(:email => email, :status => Status::VALIDATED, :name => Names::CORAL)%></td>
    </tr>
  <% end %>
</table>

<script>
/* poll for file generation status */
$('.job_in_progress').each(function(i){
  var job_id = this.id;
  setInterval(function(){
    $.ajax({ url: "/admin/get_job_status?job_id="+job_id, success: function(data){
      if(data['status'] == 'completed'){
        alert(data['message']);
        window.location.reload();
      }
    }, dataType: "json"});
  }, 30000);
});
</script>
