<%= simple_form_for(resource, :remote => true, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :id => 'form_forgot_password' }, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <div class="modal-header">
    <a class="close">Ã—</a>
    <h3>Forgot your password?</h3>
  </div>
  <div class="modal-body">
    <div class="inputs">
      <%= f.input :email, :required => true %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.button :submit, "Send me reset password instructions", class: 'btn-primary' %>
    <%= render "links" %>
  </div>
<% end %>